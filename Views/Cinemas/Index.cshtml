@*Define Model*@
@model IEnumerable<Cinema>

@*Define ViewData*@
@{
	ViewData["Title"] = "List of Cinemas";
}
@*Write code*@
<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">

			<thead class="text-center">
				<tr>
					<th>@Html.DisplayNameFor(model => model.CinemaLogo)</th>
					<th>@Html.DisplayNameFor(model => model.CinemaName)</th>
					<th>@Html.DisplayNameFor(model => model.CinemaDescription)</th>
					<th>Actions</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src ="@item.CinemaLogo" alt="@item.CinemaName" style="max-width: 150px">
						</td>
						
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.CinemaName)
						</td>
						
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.CinemaDescription)
						</td>

						<td class="align-middle">
							<a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
							<a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
						</td>
					</tr>
				}
			</tbody>

		</table>
	</div>
</div>