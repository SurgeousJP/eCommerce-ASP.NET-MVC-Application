@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">
    @foreach (var item in Model){
        <div class="col-md-4 col-xs-6 border-primary mb-3">
        <div class="card-mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-healer text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @item.MovieName
                                <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <img src="@item.MovieImageURL" width="100%" alt="@item.MovieName" />
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <p class="card-text">@item.MovieDescription</p>
                        <p class="card-text"><b>Cinema: </b>@item.Cinema.CinemaName</p>
                        <p class="card-text"><b>Category: </b>@item.MovieCategory</p>
                        <p class="card-text"><b>Start Date: </b>@item.MovieStartDate.ToString("dd MMM yy")</p>
                        <p class="card-text"><b>End Date: </b>@item.MovieEndDate.ToString("dd MMM yy")</p>
                        <p class="card-text"><b>Status: </b>
                                @if(DateTime.Now >= item.MovieStartDate && DateTime.Now <= item.MovieEndDate)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else if (DateTime.Now > item.MovieEndDate)
                                {
                                    <span class="badge bg-danger text-white">EXPIRED</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-white">UPCOMING</span>
                                }
                            </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i>Show Details</a>
                            <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i>Add to Cart: (Price @item.MoviePrice.ToString("c")) </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div> 